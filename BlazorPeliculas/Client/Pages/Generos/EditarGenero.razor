@page "/generos/editar/{GeneroId:int}"
<h3>Editar Género</h3>

<FormularioGenero Genero="Genero" OnValidSubmit="Editar" />

@code {
    [Parameter] public int GeneroId { get; set; }
    private Genero Genero;
    protected override void OnInitialized()
    {
        Genero = new Genero() { Id = GeneroId, Nombre = "Drama" };
        base.OnInitialized();
    }

    private void Editar()
    {
        Console.WriteLine("Editando Genero de Pelicula");
        Console.WriteLine($"Id:{GeneroId}");
        Console.WriteLine($"Nombre: {Genero.Nombre}");
    }
}